<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zp.mapper.BloggerMapper">

    <resultMap id="BloggerMapping" type="Blogger">
        <id column="blogger_id" property="id" javaType="int"/>
        <result property="blogger_name" column="name"/>
        <result property="blogger_password" column="password"/>
        <result property="blogger_profile" column="profile"/>
        <result property="blogger_nickName" column="nickName"/>
        <result property="blogger_signature" column="signature"/>
        <result property="blogger_profilePic" column="profilePic"/>
    </resultMap>

    <select id="findBloggerByName" parameterType="String" resultMap="BloggerMapping">
		select * from tb_blogger where name=#{name}
	</select>

    <select id="findBlogger" resultMap="BloggerMapping">
		select * from tb_blogger where id=1;
	</select>

    <update id="update" parameterType="Blogger">
        update tb_blogger
        <set>
            <if test="name != null and name != ''">
                blogger_name=#{name},
            </if>
            <if test="password != null and password != ''">
                blogger_password=#{password},
            </if>
            <if test="nickName != null and nickName != ''">
                blogger_nickName=#{nickName},
            </if>
            <if test="signature != null and signature != ''">
                blogger_signature=#{sign},
            </if>
            <if test="profile != null and profile != ''">
                blogger_profile=#{profile},
            </if>
            <if test="imageName != null and imageName != ''">
                blogger_profilePic=#{profilePic},
            </if>
        </set>
        where id=#{id}
    </update>

</mapper>